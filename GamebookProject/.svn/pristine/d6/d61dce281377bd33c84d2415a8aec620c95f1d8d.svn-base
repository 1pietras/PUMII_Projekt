package pl.polsl.ptakjakub.gamebook.dto;

/**
 * Represents a 'path' node.
 *
 * @author Jakub Ptak
 * @version 1.0
 */
public class Path {

    private int targetParagraph;

    private Integer requirement;

    private String swipe;

    /**
     * Gets target paragraph id.
     *
     * @return paragraph's id
     */
    public int getTargetParagraph() {
        return targetParagraph;
    }

    /**
     * Sets target paragraph's id.
     *
     * @param targetParagraph paragraph id
     */
    public void setTargetParagraph(int targetParagraph) {
        this.targetParagraph = targetParagraph;
    }

    /**
     * Gets id of required item.
     *
     * @return requirement
     */
    public Integer getRequirement() {
        return requirement;
    }

    /**
     * Sets id of required item
     *
     * @param requirement item id
     */
    public void setRequirement(Integer requirement) {
        this.requirement = requirement;
    }

    /**
     * Gets swipe gesture attached to the path.
     *
     * @return swipe
     */
    public String getSwipe() {
        return swipe;
    }

    /**
     * Sets swipe gesture attached to the path.
     *
     * @param swipe swipe gesture
     */
    public void setSwipe(String swipe) {
        this.swipe = swipe;
    }
}
